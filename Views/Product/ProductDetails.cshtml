@model Product

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Product Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="/Images/Products/@Model.ImageURL" class="img-fluid rounded" alt="@Model.Name" />
                </div>
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th class="w-25">Product ID:</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>Name:</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>@Model.Description</td>
                            </tr>
                            <tr>
                                <th>Price:</th>
                                <td>@string.Format("{0:C}", @Model.Price)</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Products", "Product")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Product List
            </a>
        </div>
    </div>
</div>