@model Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <h2>Instructor Details</h2>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImgURL))
                    {
                        <img src="@Model.ImgURL" class="img-fluid rounded" alt="@Model.Name" />
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Salary</dt>
                        <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Department</dt>
                        <dd class="col-sm-9">@Model.Department?.Name</dd>

                        <dt class="col-sm-3">Course</dt>
                        <dd class="col-sm-9">@Model.Course?.Name</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>